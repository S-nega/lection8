extends layout

block content
    if currentuser
        p Hello, #{currentuser.name} !
        <a href="/api/users/auth">Log Out</a>
    else 
        p You are not registered
        <a href="/api/users/auth">Log In to your account</a>
        br
        <a href="/api/users/reg">Don't have an account?</a>
    
    br
    br

    a(href="/api/books") books-list 
    br
    a(href="/api/authors") authors-list
    br
    br
    p users-list:

    each user in users
        p name: <a href=/api/users/#{user.id}> !{user.name} </a>
        