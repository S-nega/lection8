extends layout

block content

    a(href="/api/books") back to lists

    p Hello #{currentuser.name} !
    form(action="/api/books/find", method="post") 
        p book name: 
        <input type="text" name = "name" value = #{name}>
        br
        p book author: 
        <input type="text" name = "author" value = #{author}>
        br
        br
        button(type="submit" value="save") Find  

    br
    br
    
    a(href="/api/users") users-list
    br
    a(href="/api/authors") authors-list
    br
    a(href="/api/books") books-list:

    
    if currentuser 
        p <a href=/api/books/add> Add book </a>

    each book in findedBooks
        p name: <a href=/api/books/#{book.id}> !{book.name} </a>
        