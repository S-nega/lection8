extends layout

block content

    if currentuser
        p Hello, #{currentuser.name} !
        <a href="/users/auth">Log Out</a>
    else 
        p You are not registered
        <a href="/users/auth">Log In to your account</a>
        br
        <a href="/users/reg">Don't have an account?</a>
    
    br
    br

    a(href="/books") books-list 
    br
    a(href="/authors") authors-list
    br
    br
    p users-list:

    each user in users
        p name: <a href=/users/#{user.id}> !{user.name} </a>
        